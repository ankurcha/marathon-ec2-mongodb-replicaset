{
  "id": "/mongodb/rs0",
  "instances": 3,
  "cpus": 2.0,
  "mem": 4096,
  "env": {
    "ochopod_cluster": "mongodb_cluster",
    "ochopod_namespace": "mongodb.rs0"
  },
  "container": {
    "type": "DOCKER",
    "docker": {
      "network": "BRIDGE",
      "image": "ankurcha/marathon-ec2-mongodb-replicaset",
      "forcePullImage": true,
      "portMappings": [
        { "containerPort": 27018 },
        { "containerPort": 8080 }
      ],
      "volumes":[
        {"containerPath": "/etc/mesos", "hostPath": "/etc/mesos", "mode": "RO"}
      ]
    }
  }
}
